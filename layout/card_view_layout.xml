<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:id="@+id/card_view"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    >

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#0277BD"
        >

        <ImageView
            android:id="@+id/imagen_educador"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:src="@drawable/student_login"
            android:scaleType="fitCenter"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/nombre_educador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre y apellido"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/profesion_educador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profesion"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                android:textSize="15sp"
                android:drawableStart="@drawable/ic_action_ocupa"
                android:drawablePadding="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/asignaturas_educador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asignaturas"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_action_book"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/direccion_educador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DirecciÃ³n"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_action_gps"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:drawablePadding="5dp"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>